{
  "name": "xrpl-stablecoin-flow",
  "version": "1.0.0",
  "description": "XRPL stablecoin flow management service",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint": "eslint 'src/**/*.{ts,tsx}' 'tests/**/*.{ts,tsx}'",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' 'tests/**/*.{ts,tsx}' --fix",
    "check": "pnpm run typecheck && pnpm run lint && pnpm run format",
    "fix": "pnpm run lint:fix && pnpm run format:fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest integration",
    "test:unit": "jest unit",
    "postinstall": "chmod +x setup-hooks.sh && ./setup-hooks.sh"
  },
  "keywords": [
    "xrp",
    "xrpl",
    "stablecoin",
    "flow",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^17.2.2",
    "xrpl": "^4.4.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.1",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "bip39": "^3.1.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.0.1",
    "jest": "^30.1.3",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.1",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=22"
  }
}
